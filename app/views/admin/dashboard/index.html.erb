  <div class="main-content-container">
    <div class="main-content">
      <div class="row">
        <div class="col-md-3">
          <div class="card text-white text-center bg-primary">
            <h1><%= @user_count %></h1>
            <p>Users</p>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card text-white text-center bg-danger">
            <h1><%= @gig_count %></h1>
            <p>Gigs</p>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card text-white text-center bg-success">
            <h1><%= @order_count %></h1>
            <p>Orders</p>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card text-white text-center bg-info">
            <h1><%= @category_count %></h1>
            <p>Categories</p>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
